@page
@model IndexModel
@{
    ViewData["Title"] = "Hammarby Pizzeria - Där kvalité avgör.";
}

<div class="text-center">

    <div id="start">

    </div>

    <div id="menu">
        <h2>MENY</h2>
        <h3 id ="menuPizza">Pizza</h3>
        <div class="menu">
            @foreach( var menuItem in Model.MenuItems ) {
                    if( menuItem.category == Models.menuItemCategory.pizza ) {
                        <div class="menu-item">
                            <div class="menu-item-number">@menuItem.number.</div>
                            <div class="menu-item-name">@menuItem.name</div>
                            <div class="menu-item-price">@menuItem.price:-</div>
                            <div class="menu-item-description">@menuItem.description</div>
                        </div>
                    }
            }
        </div>

        <h3 id="menuMozzarellaPizza">Mozzarellapizza</h3>
        <div class="menu">
            @foreach( var menuItem in Model.MenuItems ) {
                if( menuItem.category == Models.menuItemCategory.mozzarellapizza ) {
                    <div class="menu-item">
                        <div class="menu-item-number">@menuItem.number.</div>
                        <div class="menu-item-name">@menuItem.name</div>
                        <div class="menu-item-price">@menuItem.price:-</div>
                        <div class="menu-item-description">@menuItem.description</div>
                    </div>
                }
            }
        </div>

        <h3 id ="menuSallad">Sallad</h3>
        <div class="menu">
            @foreach( var menuItem in Model.MenuItems ) {
                if( menuItem.category == Models.menuItemCategory.sallad ) {
                    <div class="menu-item">
                        <div class="menu-item-number">@menuItem.number.</div>
                        <div class="menu-item-name">@menuItem.name</div>
                        <div class="menu-item-price">@menuItem.price:-</div>
                        <div class="menu-item-description">@menuItem.description</div>
                    </div>
                }
            }
        </div>

        <h3 id="menuMisc">Övrigt</h3>
        <div class="menu">
            @foreach( var menuItem in Model.MenuItems ) {
                if( menuItem.category == Models.menuItemCategory.other ) {
                    <div class="menu-item">
                        <div class="menu-item-number">@menuItem.number.</div>
                        <div class="menu-item-name">@menuItem.name</div>
                        <div class="menu-item-price">@menuItem.price:-</div>
                        <div class="menu-item-description">@menuItem.description</div>
                    </div>
                }
            }
        </div>

        <h3 id="menuLunch">Lunch</h3>
        <div class="lunch">
            @foreach( var menuItem in Model.MenuItems ) {
                if( menuItem.category == Models.menuItemCategory.lunch ) {
                    <div class="menu-item">
                        <div class="menu-item-number"></div>
                        <div class="menu-item-name">@menuItem.name</div>
                        <div class="menu-item-price">@menuItem.price:-</div>
                        <div class="menu-item-description">@menuItem.description</div>
                    </div>
                }
            }
        </div>
    </div>

    <div id="contact">
        <h2>Hitta oss!</h2>
        <div class="Contact">
            <h3>Öppettider</h3>
            <p>Alla dagar mellan klockan 10 - 22</p>
            <h3>Telefonnummer</h3>
            <p>08-64 90 200</p>
            <h3>Adress</h3>
            <p>Finn Malmgrens plan 5-7</p>
            <p>121 38</p>
            <p>Johanneshov</p>
        </div>
